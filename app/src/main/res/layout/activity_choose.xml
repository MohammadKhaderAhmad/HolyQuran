<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageDecoration"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/download" />

    <Button
        android:id="@+id/btnSurahInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageDecoration"
        android:layout_marginTop="32dp"
        android:text="معلومات سور القرآن الكريم" />

    <Button
        android:id="@+id/btnListenQuran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSurahInfo"
        android:layout_marginTop="16dp"
        android:text="الاستماع للقرآن الكريم بصوت الشيخ الفاضل عبد الباسط" />

    <Button
        android:id="@+id/btnListenQuran1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnListenQuran"
        android:layout_marginTop="16dp"
        android:text="الاستماع للقرآن الكريم بصوت الشيخ الفاضل عبد الرحمن السديس" />

    <Button
        android:id="@+id/btnListenQuran2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnListenQuran1"
        android:layout_marginTop="16dp"
        android:text="الاستماع للقرآن الكريم بصوت الشيخ الفاضل مشاري العفاسي" />

</RelativeLayout>
